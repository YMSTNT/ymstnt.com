---
const { title, url, description, date } = Astro.props;

const dateOptions: object = {
	year: "numeric",
	month: "short",
	day: "numeric",
};

const formattedPublishDate = new Date(date).toLocaleDateString(
	"en-GB",
	dateOptions
);
---

<div id="card">
    <h3>{title}</h3>
    <p>{description}</p>
    <a href={url}>
      <span id="ref"></span>
    </a>
    <div class="footer">
      <span class="date">{formattedPublishDate}</span>
    </div>
</div>

<style>
  h3 {
    margin-top: 0;
  }

  #card {
    display: block;
    background: #181825;
    max-width: 30em;
    border: #181825 1px solid;
    border-radius: 1em;
    margin: 2em auto;
    padding: 1.5em;
    cursor: pointer;
    position: relative;
  }

  #card:hover, #card:active {
    border: lightblue 1px solid;
  }

  #ref {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .footer {
    font-size: smaller;
  }
</style>

