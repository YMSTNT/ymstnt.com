---
import "../styles/global.css";

const allPosts = await Astro.glob("../pages/posts/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<div id="tag-pane">
  <h3>Tags</h3>
  {
    tags.map((tag) => (
      <tag id="tag">
        {tag}
        <a href={`/tags/${tag}`}>
          <span class="ref" />
        </a>
      </tag>
    ))
  }
</div>

<style>
  #tag-pane {
    background-color: var(--mantle);
    margin: 2em auto;
    border-radius: 1em;
    padding: 1.5em;
    min-height: 3rem;
  }

  #tag-pane h3 {
    margin-top: 0;
  }

  #tag {
    display: inline-block;
    background-color: var(--crust);
    border: var(--crust) 1px solid;
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    cursor: pointer;
    position: relative;
    color: var(--subtext1);
    line-height: 1.7em;
  }

  #tag:hover,
  #tag:active {
    border: var(--overlay2) 1px solid;
  }

  .ref {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
  }
</style>
