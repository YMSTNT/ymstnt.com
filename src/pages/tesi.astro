<script is:inline>
  function updateDays() {
    var start = moment();
    let timeToDateTime = (hours, minutes) => {
      return start.clone().startOf('day').add(hours, 'hours').add(minutes, 'minutes');
    };
    let hours = [
      timeToDateTime(8, 45),
      timeToDateTime(8, 45),
      timeToDateTime(14, 35),
      timeToDateTime(11, 35),
      timeToDateTime(11, 35),
    ];

    if (start > hours[(start.day() - 1 + 7) % 7]) {
      start.add(1, "day");
    }
    var end = moment("2023-04-28");

    var holidays = [
      moment("2023-01-01"),
      moment("2023-01-02"),
      moment("2023-01-03"),
      moment("2023-01-04"),
      moment("2023-01-05"),
      moment("2023-01-06"),
      moment("2023-01-23"),
      moment("2023-01-24"),
      moment("2023-01-25"),
      moment("2023-01-26"),
      moment("2023-01-27"),
      moment("2023-02-20"),
      moment("2023-02-21"),
      moment("2023-02-22"),
      moment("2023-02-23"),
      moment("2023-02-24"),
      moment("2023-03-15"),
      moment("2023-04-06"),
      moment("2023-04-07"),
      moment("2023-04-10"),
      moment("2023-04-11"),
      moment("2023-05-01"),
      moment("2023-05-29"),
    ];

    //const includeMondays = document.querySelector("#include-mondays").checked;
    let days = 0;
    let firstLessonDays = 0;

    // Count the days
    for (let current = moment(start); current < end; current.add(1, "day")) {
      const dayOfWeek = current.day();
      // Skip saturday and sunday
      if (dayOfWeek == 6 || dayOfWeek == 0) continue;
      // Skip monday if include mondays is turned off
      //if (!includeMondays && dayOfWeek == 1) continue;
      // Skip if holiday
      const isHoliday = holidays.some((holiday) =>
        current.isSame(holiday, "day")
      );
      if (isHoliday) continue;

      if (dayOfWeek == 1 || dayOfWeek == 2) {
        firstLessonDays++;
      }

      // Increment days when it passed all the previous checks
      days++;
    }

    if (days > 0) {
      document.querySelector("#count").innerHTML = days;
    }
    else 
    {
      document.querySelector("#precount").innerHTML = "Nincs t√∂bb tesi √≥ra!"
      document.querySelector("#count").innerHTML = "üéâüéâüéâ";
      document.querySelector("#aftercount").remove();
      document.querySelector("#firstLessonParagraph").remove();
    }

    if (firstLessonDays > 0) {
      document.querySelector("#firstLessons").innerHTML = firstLessonDays;
    }
    else
    {
      document.querySelector("#firstLessonParagraph").innerHTML = "Nincs t√∂bb tesi els≈ë √≥r√°ban! üéâ"
      document.querySelector("#firstLessons").remove();
    }
  }

  updateDays();
</script>

