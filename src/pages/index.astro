---
import Layout from "../layouts/Layout.astro";
import Socials from "../components/Socials.astro";
import CenteredCard from "../components/CenteredCard.astro";
import DividerLine from "../components/DividerLine.astro";
---

<Layout title="YMSTNT" description="YMSTNT's personal site" nav="/">
  <CenteredCard classes="h-card" bgcolor="var(--mantle)" maxWidth="30em">
    <div id="profilepic-container">
      <img
        class="u-photo"
        src="/tnt512.png"
        id="profilepic"
        alt="My profile picture"
        title="Hey there!"
      />
    </div>
    <h1 id="name">YMSTNT</h1>
    <a rel="me" href="https://ymstnt.com/" class="p-name u-url">YMSTNT</a>
    <a rel="me" href="https://proven.lol/8dfe64" class="proven-lol">proven8dfe64</a>
    <div id="general-info">
      <p id="bio">
        CS student, aspiring sysadmin & front-end, casual gamer, aquarium
        lover
      </p>
      <span id="pronouns">he/him</span>
    </div>
    <Socials class="socials"/>
    <DividerLine/>
    <div id="introduction">
      <p>
        Hi, I'm YMSTNT. <span
          id="pronouncination"
          title="You can also just call me TNT.">/waɪ-ɛm-ɛs-tiː-ɛn-tiː/</span
        >
      </p>
      <p class="p-note">
        I'm a university student passionate about software development and
        computer science. In my free time, I enjoy tinkering with technology
        (mainly Linux and servers), playing casual games, and caring for my
        aquarium.
      </p>
    </div>
  </CenteredCard>
</Layout>

<style>
  body {
    overflow-wrap: break-word;
    margin: 0;
    font-size: 1em;
  }

  h1 {
    font-size: 1.5em;
    margin-block-start: 0.83em;
    margin-block-end: 0.83em;
  }

  #profilepic {
    height: 8.7em;
    border-radius: 50%;
  }

  #bio {
    font-weight: bold;
    margin: 0;
  }

  #pronouns {
    color: var(--overlay1);
    padding: 0.5em;
  }

  #introduction {
    text-align: left;
  }

  #introduction p {
    margin-bottom: 0;
  }

  #pronouncination {
    color: var(--overlay1);
    font-style: italic;
  }

  .p-name, .proven-lol {
    display: none;
  }

  @media screen and (max-width: 600px) {
    body {
      font-size: 1em;
    }
    main {
      padding: 1.5em;
    }
  }
</style>
