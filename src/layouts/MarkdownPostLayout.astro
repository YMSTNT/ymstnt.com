---
import BlogLayout from "./BlogLayout.astro";
import DividerLine from "../components/DividerLine.astro";

const { frontmatter } = Astro.props;

const dateOptions: object = {
  year: "numeric",
  month: "long",
  day: "numeric",
};

const formattedPublishDate = new Date(frontmatter.pubDate).toLocaleDateString(
  "en-US",
  dateOptions
);
---

<BlogLayout title={frontmatter.title} description={frontmatter.description} nav="/blog">
  <section id="image">
    <img src={frontmatter.image.url} height="250" alt={frontmatter.image.alt} />
  </section>
  <h1>{frontmatter.title}</h1>
  <p id="date">Published on: {formattedPublishDate}</p>
  <!-- <p><em>{frontmatter.description}</em></p> -->
  <div class="tags">
    {
      frontmatter.tags.map((tag) => (
        <tag>
          {tag}
          <a href={`/tags/${tag}`}>
            <span class="ref" />
          </a>
        </tag>
      ))
    }
  </div>
  <DividerLine />
  <div id="article">
    <slot />
  </div>
</BlogLayout>

<style>
  h1 {
    font-size: 2rem;
    margin-bottom: 0;
  }

  tag {
    display: inline-block;
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    background-color: var(--crust);
    border: var(--crust) 1px solid;
    cursor: pointer;
    position: relative;
    line-height: 1.7em;
  }

  tag:hover,
  tag:active {
    border: var(--overlay2) 1px solid;
  }

  .ref {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
  }

  #article {
    text-align: justify;
  }

  #image img {
    width: 100%;
  }

  #date {
    color: var(--overlay0);
  }
</style>
